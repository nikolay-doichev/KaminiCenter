@model KaminiCenter.Web.ViewModels.FinishedModels.AllFinishedModelViewModel
@using KaminiCenter.Data.Models.Enums;
@using KaminiCenter.Services;
@using KaminiCenter.Common;
@inject IEnumParseService enumParseService;
@{
    ViewData["Title"] = "All";
    var typeOfProject = @Model.FinishedModels.Select(x => x.TypeProject).FirstOrDefault();
    var typeName = string.Empty;
if(this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    if (typeOfProject == null)
    {
        typeName = "Направете първия запис от категорията";
    }
    else
    {
        typeName = this.enumParseService.GetEnumDescription(typeOfProject.ToString(), typeof(TypeProject));
    }
}
}
<h1 class="display-4 m-4 mb-1">@typeName</h1>

@if (this.TempData["SuccessfullyCreateFinishedModel"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @this.TempData["SuccessfullyCreateFinishedModel"]
    </div>
}

@if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="btn btn-primary m-4 mb-4" asp-area="Administration" asp-controller="FinishedModels" asp-action="Add">Създай нов запис</a>
}
<hr />
<div class="row">

    @foreach (var finishedModel in Model.FinishedModels)
    {
        <div class="col-md-4">
            <div class="card-box-d">
                <div class="card-img-d">
                    <img src="@finishedModel.ImagePath" alt="@finishedModel.Name" class="img-d img-fluid">
                </div>
                <div class="card-overlay card-overlay-hover">
                    <div class="card-header-d">
                        <div class="card-title-d align-self-center">
                            <h3 class="title-d">
                                <a asp-action="Details" asp-route-name="@finishedModel.Name" class="link-two">
                                    @finishedModel.Name
                                </a>
                            </h3>
                        </div>
                    </div>
                    <div class="card-body-d">
                        <p class="content-d color-text-a">
                            @finishedModel.ShortDesciption
                        </p>
                    </div>


                    <!--Footer Start-->
                    <div class="card-footer-d">
                        <div class="socials-footer d-flex justify-content-center">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a href="https://www.facebook.com/kaminicenter" class="link-one">
                                        <i class="fa fa-facebook" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="link-one">
                                        <i class="fa fa-twitter" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="link-one">
                                        <i class="fa fa-instagram" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="link-one">
                                        <i class="fa fa-pinterest-p" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="link-one">
                                        <i class="fa fa-dribbble" aria-hidden="true"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--Footer End-->
                </div>
            </div>
        </div>
    }
</div>

<!--Paging Start-->
<div class="row">
    <div class="col-sm-12">
        <nav class="pagination-a">
            <ul class="pagination justify-content-end">
                @if (this.Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <span class="ion-ios-arrow-back"></span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-area=""
                           asp-controller="FinishedModel"
                           asp-action="All"
                           asp-route-type="@typeOfProject"
                           asp-route-page="@(this.Model.CurrentPage - 1)">
                            <span class="ion-ios-arrow-back"></span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= this.Model.PagesCount ; i++)
                {
                    var active = i == this.Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @active">
                        <a class="page-link"
                           asp-area=""
                           asp-controller="FinishedModel"
                           asp-action="All"
                           asp-route-type="@typeOfProject"
                           asp-route-page="@i">@i</a>
                    </li>
                }
                @if (this.Model.CurrentPage == this.Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            <span class="ion-ios-arrow-forward"></span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item next">
                        <a class="page-link"
                           asp-area=""
                           asp-controller="FinishedModel"
                           asp-action="All"
                           asp-route-type="@typeOfProject"
                           asp-route-page="@(this.Model.CurrentPage + 1)">
                            <span class="ion-ios-arrow-forward"></span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
<!--Paging End-->
