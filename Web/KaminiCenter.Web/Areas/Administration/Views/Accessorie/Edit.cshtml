@model KaminiCenter.Web.ViewModels.Accessories.EditAccessorieViewModel
@using KaminiCenter.Data.Models.Enums;
@using KaminiCenter.Services;
@inject IEnumParseService enumParseService;
@{
    ViewData["Title"] = "Промяна на Аксесоари";
}

    <h1>Промяна стойностите на Аксесоари</h1>

<hr />
<div class="container-fluid">
    <form asp-area="Administration" asp-controller="Accessorie" asp-action="Edit" method="post"
          enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">

                <!-- Name of Accessorie -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <!-- End of Name of Accessorie -->
                <!-- Image Upload-->
                <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input asp-for="ImagePath" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
                <!--End Image Upload-->
            </div>
            <div class="col-md-6">
                <!-- Description of Accessorie-->
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" rows="12" cols="50" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <!-- End of Description of Accessorie-->

            </div>
            <div class="form-group m-4">
                <input type="submit" value="Запази промените" class="btn btn-success" />

                <a class="btn btn-info" asp-area="" asp-controller="Accessorie" asp-action="All" >Отмени</a>

            </div>

        </div>
    </form>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>