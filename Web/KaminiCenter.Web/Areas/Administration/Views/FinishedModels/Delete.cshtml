@model KaminiCenter.Web.ViewModels.FinishedModels.DeleteFinishedViewModel

@{
    ViewData["Title"] = "Изтриване на модели";
}

<h3>Сигурни ли сте, че искате да изтриете модела?</h3>
<div>
    
    <hr />
    <div class="col-sm-12">
        <div class="row">
            <div class="col-md-6">
                <div class="agent-avatar-box">
                    <img src="@Model.ImagePath" alt="@Model.Name" class="agent-avatar img-fluid">
                </div>
            </div>
            <div class="col-md-5 section-md-t3">
                <div class="agent-info-box">
                    <div class="agent-title">
                        <div class="title-box-d">
                            <h3 class="title-d">
                                @Model.Name
                            </h3>
                        </div>
                    </div>
                    <div class="agent-content mb-3">
                        <p class="content-d color-text-a">
                            @Html.Raw(@Model.Description)
                        </p>
                        <div class="info-agents color-a">
                            <p>
                                <strong>Модел: </strong>
                                <span class="color-text-a"> @Model.Name</span>
                            </p>                            
                        </div>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
    <hr />

    <form asp-action="Delete">
        <input type="submit" value="Изтрии" class="btn btn-danger" />
        <a class="btn btn-info" asp-area="" asp-controller="FinishedModels" asp-action="All" asp-route-type="@Model.TypeProject">Отмени</a>
    </form>
</div>
